{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
		"indent": [true, "tabs", 4],
		"quotemark": [true, "single", "avoid-escape"],
		"trailing-comma": [true, { "multiline": "never", "singleine": "never" }],
		"no-inferrable-types": true,
		"object-literal-sort-keys": false,
		"arrow-parens": false
	},
	"rulesDirectory": [],
	"linterOptions": {
		"exclude": [
			"**/node_modules/**"
		]
	}
}
